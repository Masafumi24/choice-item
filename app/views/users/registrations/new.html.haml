.userSignUp
  .userSignUpBox
    .userSignUpBoxTitle
      Sign up
    = form_with model: @user, url: user_registration_path, id:'signBox',local: true do |f|
      = devise_error_messages!
      .userSignUpBoxField
        = f.label :nickname, class: "userSignUpBoxFieldCalum"
        %br/
        = f.text_field :nickname, autofocus: true, class: "userSignUpBoxFieldForm"
      .userSignUpBoxField
        = f.label :email, class: "userSignUpBoxFieldCalum"
        %br/
        = f.email_field :email, class: "userSignUpBoxFieldForm"
      .userSignUpBoxField
        = f.label :password, class: "userSignUpBoxFieldCalum"
        - if @validatable
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "off", class: "userSignUpBoxFieldForm"
      .userSignUpBoxField
        = f.label :password_confirmation, class: "userSignUpBoxFieldCalum"
        %br/
        = f.password_field :password_confirmation, autocomplete: "off", class: "userSignUpBoxFieldForm"
      .userSign
        = f.label :image, class: "userSignImage" do
          .userSignImageBox
            .userSignImageBoxName
              Image
          .userSignImagePre
            =f.file_field :image, class: ".userSignImagePreFile", id: :img_file
            - if @user.image.present?
              = image_tag @user.image.url, id: :img_prev
            - else
              = image_tag "丸枠付きのカメラのアイコン素材 2.jpeg", id: :img_prev
      .SignSubmitArea
        = f.submit "Sign up", class: "SignSubmitAreaBtn"
