!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title ChoiceItem
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .header
      .headerLeft
        = link_to "Category", "#", class:"headerLeftMenu"
        - if request.path == root_path
          = link_to "Random", "#", class:"headerLeftMenu", id: 'modalOpenBtn'
          = link_to "", root_path(@item), id: 'itemRandomBtn'
          #overlay
            #modalWindow
              .indexRandomItem
                -@random.each do |item| 
                  =image_tag item.images.first.src.to_s,class: "indexRandomItemImage"
              %button#modalCloseBtn OK
              %button#randomReturnBtn 選び直す       
        = link_to "New Item", new_item_path, class:"headerLeftMenu"
      =link_to "Choice Item", "/", class:"headerCenter"
      .headerRight
        %ul#menu
          %li
            %a{:href => "#",class: "headerRightParent"} ↓
            %ul
              - if user_signed_in?
                %li
                  %a{:href => destroy_user_session_path, method: :delete, class: "logoutBtn"} Log Out
                %li
                  %a{:href => "#",class: "MyPageBtn"} My Page
              - else
                %li
                  %a{:href => new_user_registration_path, class: "signUpBtn"} Sign up
                %li
                  %a{:href => user_session_path, class: "logInBtn"} Login

    = yield
    .footer
