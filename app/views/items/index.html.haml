.indexContent
  .indexContentImage
- if @itemsuser.present?
  .indexUser
    .indexUserTitle
      .indexUserTitleText
        Your Item Chart
      = link_to user_path(current_user.id) do
        .indexUserTitleBtn
          →
    .indexUserItem
      -@useritems.each do |item|
        = link_to item_path(item.id) do
          =image_tag item.images.first.src.thumb300.url, class: "indexUserItemImage"
- if @items.present?
  .indexNew
    .indexNewTitle
      .indexNewTitleText
        New Item Chart
      .indexNewTitleBtn
        =link_to allitem_items_path do
          →
    .indexNewItem
      -@items.each do |item|
        = link_to item_path(item.id) do
          =image_tag item.images.first.src.thumb300.url, class: "indexNewItemImage"
= javascript_include_tag 'modal.js'